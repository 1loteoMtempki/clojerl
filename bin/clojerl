#!/usr/bin/env bash
if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
  echo "Usage: `basename $0` [options] [.clje file] [data]

  -v                          Prints version and exits
  -pa PATH                    Prepends the given path to Erlang code path (*)
  -pz PATH                    Appends the given path to Erlang code path (*)

  --eval EXPR                 Evaluates the given expression
  --no-halt                   Does not halt the Erlang VM after execution" >&2
  exit 1
fi

readlink_f () {
  cd "$(dirname "$1")" > /dev/null
  filename="$(basename "$1")"
  if [ -h "$filename" ]; then
    readlink_f "$(readlink "$filename")"
  else
    echo "`pwd -P`/$filename"
  fi
}

SELF=$(readlink_f "$0")
CLJE_BINDIR=$(dirname "$SELF")
CLJE_ROOT=$(dirname "$CLJE_BINDIR")

export ERL_LIBS="$CLJE_ROOT/_build/default/lib:$ERL_LIBS"
exec erl -s clojerl_cli start +pc unicode -noshell -extra "$@"
